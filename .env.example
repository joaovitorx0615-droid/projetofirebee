PORT=3000
SHEET_SYNC_MS=60000
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=dashboard_user
DB_PASSWORD=SUA_SENHA
DB_NAME=dashboard_producao
DB_CONNECTION_LIMIT=4
DB_CREATE_IF_MISSING=true
# true (padrao): sem MariaDB o servidor encerra no startup.
# false: permite fallback em JSON local (contingencia) e o dashboard exibe alerta.
REQUIRE_DB=true

# Modo publico (fallback):
SHEET_CSV_URL=https://docs.google.com/spreadsheets/d/SEU_ID/export?format=csv&gid=SEU_GID

# Modo privado (Google Sheets API + service account):
GOOGLE_SPREADSHEET_ID=SEU_SPREADSHEET_ID
GOOGLE_SHEET_GID=558819420
# Opcional: se quiser usar range direto ao inves de GID
# GOOGLE_SHEET_RANGE='Nome da Aba'!A:ZZ

# Escolha APENAS uma opcao de credencial:
# GOOGLE_SERVICE_ACCOUNT_FILE=C:\caminho\service-account.json
# GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account", ...}
